<h2>Users</h2>

<table>
  <thead>
    <tr>
      <th>Email</th>
      <th>Date email confirmed</th>
      <th>Role</th>
    </tr>
  </thead>
  <tbody>
    <% @view_model.users.each do |user| %>
    <tr>
      <td><%= user.email %></td>
      <td><%= user.confirmed_at %></td>
      <td><%= user.role %></td>
    </tr>
    <% end %>
  </tbody>
</table>
